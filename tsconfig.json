{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2016",
      "es2017",
      "es2018"
    ],
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "react": ["node_modules/@types/react"]
    }
  },
  "exclude": [
    "**/node_modules/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "build/**/*",
  ]
}
